{
  "name": "mern-shopping",
  "version": "1.0.0",
  "main": "server/server.js",
  "scripts": {
    "start": "if-env NODE_ENV=production && npm run start:prod || npm run start:dev",
    "start:prod": "cd server && npm start",
    "start:dev": "concurrently \"cd server && npm run watch\" \"cd client && npm start\"",
    "install": "cd server && npm i && cd ../client && npm i",
    "seed": "cd server && npm run seed",
    "heroku-postbuild": "cd client && npm run build"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "if-env": "^1.0.4",
    "react-redux": "^7.2.4",
    "redux": "^4.1.1"
  },
  "devDependencies": {
    "concurrently": "^5.1.0"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ronnie-rios/shop-shop-redux.git"
  },
  "bugs": {
    "url": "https://github.com/ronnie-rios/shop-shop-redux/issues"
  },
  "homepage": "https://github.com/ronnie-rios/shop-shop-redux#readme",
  "description": ""
}
